\mode<presentation>


\usecolortheme{IAS2}
\useinnertheme[shadow=true]{rounded}
\useoutertheme{IAS_sidebar2_12pt}
\usefonttheme{default}

% change this to adapt the size of the sidebar
\setbeamersize{sidebar width left=0.5cm,sidebar width right=0cm}{\usebeamercolor{sidebar}}

% you might additionally want to change the margins
\setbeamersize{text margin left=0.5cm,text margin right=0.5cm}

% comment this to disable the gradient shading
\setbeamertemplate{sidebar canvas left}[horizontal shading][left=ias_bluelight,right=ias_bluemid]


